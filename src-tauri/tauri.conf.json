{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "screensharing-udp-ffmpeg",
  "version": "0.1.0",
  "identifier": "com.zenadev.screensharing-udp-ffmpeg",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "screensharing-udp-ffmpeg",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["en-US"],
        "displayLanguageSelector": false
      }
    },
    "resources": {
      "windows": ["resources/windows/*"]
    },
    "externalBin": {
      "windows": [
        "resources/windows/ffmpeg",
        "resources/windows/ffplay"
      ]
    }
  }
}
